    <!-- faulting service -->
    <bean id="faultingServiceList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>fault</value>
            </list>
        </property>
    </bean>

    <bean id="faultingServiceManager" class="org.devzendo.commonapp.service.DefaultServiceManager">
        <constructor-arg ref="springLoader" />
        <constructor-arg ref="faultingServiceList" />
    </bean>

    <bean id="fault" class="org.devzendo.commonapp.service.FaultService">
    </bean>

    <!-- service control thread is used to call into service -->
    <bean id="threadingServiceList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>thread</value>
            </list>
        </property>
    </bean>

    <bean id="threadingServiceManager" class="org.devzendo.commonapp.service.DefaultServiceManager">
        <constructor-arg ref="springLoader" />
        <constructor-arg ref="threadingServiceList" />
    </bean>

    <bean id="thread" class="org.devzendo.commonapp.service.ThreadService">
    </bean>

    <!-- services can wait on startup -->
    <bean id="waitingServiceList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>waitStartup</value>
            </list>
        </property>
    </bean>

    <bean id="waitingServiceManager" class="org.devzendo.commonapp.service.DefaultServiceManager">
        <constructor-arg ref="springLoader" />
        <constructor-arg ref="waitingServiceList" />
    </bean>

    <bean id="waitStartup" class="org.devzendo.commonapp.service.WaitingStartupService">
    </bean>

    <!-- services can wait on startup then indicate started -->
    <bean id="waitThenStartupServiceList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>waitThenStartup</value>
            </list>
        </property>
    </bean>

    <bean id="waitThenStartupServiceManager" class="org.devzendo.commonapp.service.DefaultServiceManager">
        <constructor-arg ref="springLoader" />
        <constructor-arg ref="waitThenStartupServiceList" />
    </bean>

    <bean id="waitThenStartup" class="org.devzendo.commonapp.service.WaitThenStartupService">
    </bean>

    <!-- the status of services can be obtained -->
    <bean id="getStatusesServiceList" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <!-- using other service beans defined above -->
                <value>waitStartup</value>
                <value>fault</value>
                <value>one</value>
            </list>
        </property>
    </bean>

    <bean id="getStatusesServiceManager" class="org.devzendo.commonapp.service.DefaultServiceManager">
        <constructor-arg ref="springLoader" />
        <constructor-arg ref="getStatusesServiceList" />
    </bean>

</beans>